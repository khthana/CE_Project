unit GpaNew;

interface

uses
  Windows, Messages, SysUtils, Classes, Graphics, Controls, Forms, Dialogs,
  StdCtrls, DBCtrls, Mask, Db, DBTables, ExtCtrls, Grids, DBGrids, DBCGrids,
  DXSounds, DXClass;

type
  TForm1 = class(TForm)
    Table1: TTable;
    DataSource1: TDataSource;
    DBEdit1: TDBEdit;
    DBEdit2: TDBEdit;
    DBNavigator1: TDBNavigator;
    DBGrid1: TDBGrid;
    Edit1: TEdit;
    Label2: TLabel;
    Button1: TButton;
    DBEdit3: TDBEdit;
    Label3: TLabel;
    DXSound1: TDXSound;
    DXWaveList1: TDXWaveList;
    ASK: TButton;
    DXTimer1: TDXTimer;
    Panel1: TPanel;
    procedure Button1Click(Sender: TObject);
    procedure Edit1KeyPress(Sender: TObject; var Key: Char);
    procedure ASKClick(Sender: TObject);
    procedure DXTimer1Timer(Sender: TObject; LagCount: Integer);
  private
    { Private declarations }
     num:integer;
     str:string;
     procedure iniplaysound;
  public
    { Public declarations }
    audio:Taudiofilestream;
  end;

var
  Form1: TForm1;
  talkword:string;

implementation

{$R *.DFM}

procedure TForm1.Button1Click(Sender: TObject);
begin
 table1.SetKey;
 table1.Fields[0].AsString:= edit1.Text;
 table1.GotoKey;
 dbedit3.DataField:='GPA';
 iniplaysound;
end;

procedure TForm1.Edit1KeyPress(Sender: TObject; var Key: Char);
begin
   if key=#13 then
    begin
    table1.SetKey;
    table1.Fields[0].AsString:= edit1.Text;
    table1.GotoKey;
    dbedit3.DataField:='GPA';
    iniplaysound;
    end
end;

procedure TForm1.ASKClick(Sender: TObject);
begin
DXWaveList1.Items[11].play(true);
end;

procedure TForm1.DXTimer1Timer(Sender: TObject; LagCount: Integer);
var
 tok:string;
 lengw:integer;
begin
 // if Audio.Playing then
 //  label3.caption:='playing'
 // else
 //   label3.caption:='stop';
 if talkword<>'' then
  begin
  tok:=talkword;
  tok:=copy(talkword,1,1);
  lengw:=length(talkword);
  talkword:=copy(talkword,2,lengw);

  if tok='0' then
       DXWaveList1.Items[0].play(true)
  else if tok='1'then
       DXWaveList1.Items[1].play(true)
  else if tok='2'then
       DXWaveList1.Items[2].play(true)
  else if tok='3'then
       DXWaveList1.Items[3].play(true)
  else if tok='4'then
       DXWaveList1.Items[4].play(true)
  else if tok='5'then
       DXWaveList1.Items[5].play(true)
  else if tok='6'then
       DXWaveList1.Items[6].play(true)
  else if tok='7'then
       DXWaveList1.Items[7].play(true)
  else if tok='8'then
       DXWaveList1.Items[8].play(true)
  else if tok='9'then
       DXWaveList1.Items[9].play(true)
  else if (tok='.') then
  DXWaveList1.Items[10].play(true)
  end;

end;
procedure TForm1.iniplaysound;
begin
    talkword:=dbedit3.text;
    label3.caption:=talkword;
    dxtimer1.Enabled:=true;
end;

end.
